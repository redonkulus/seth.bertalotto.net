{
    "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "lib": ["DOM", "DOM.Iterable", "ES2021"],
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "noEmit": true,
        "paths": {
            "~/*": ["./app/*"]
        },
        "resolveJsonModule": true,
        "target": "ES2021",
        "strict": true
    }
}
