{
    "private": true,
    "name": "seth.bertalotto.net",
    "description": "Website for seth.bertalotto.net",
    "license": "",
    "repository": {
        "type": "git",
        "url": "git@github.com:redonkulus/seth.bertalotto.net.git"
    },
    "scripts": {
        "build": "npm run build:css && npm run build:remix",
        "build:css": "npm run generate:css -- --minify",
        "build:remix": "remix build",
        "dev": "concurrently npm:dev:*",
        "dev:css": "npm run generate:css -- --watch",
        "dev:remix": "remix dev",
        "format": "prettier --write .",
        "generate:css": "npx tailwindcss -i ./app/styles.css -o ./build/tailwind.css",
        "lint": "concurrently npm:lint:*",
        "lint:eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
        "lint:prettier": "prettier --check .",
        "start": "remix-serve build"
    },
    "dependencies": {
        "@remix-run/node": "^1.8.1",
        "@remix-run/react": "^1.8.1",
        "@remix-run/serve": "^1.8.1",
        "@remix-run/vercel": "^1.8.1",
        "@types/marked": "^4.0.7",
        "classnames": "^2.3.2",
        "front-matter": "^4.0.2",
        "marked": "^4.2.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tiny-invariant": "^1.3.1"
    },
    "devDependencies": {
        "@remix-run/dev": "^1.8.1",
        "@remix-run/eslint-config": "^1.8.1",
        "@types/react": "^18.0.26",
        "@types/react-dom": "^18.0.9",
        "concurrently": "^7.6.0",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.8.0",
        "tailwindcss": "^3.2.4",
        "typescript": "^4.9.3"
    },
    "engines": {
        "node": "14.x"
    },
    "sideEffects": false,
    "eslintConfig": {
        "env": {
            "es2022": true
        },
        "extends": [
            "@remix-run/eslint-config",
            "@remix-run/eslint-config/node"
        ],
        "parserOptions": {
            "sourceType": "module"
        },
        "plugins": [
            "prettier"
        ],
        "rules": {
            "prettier/prettier": "error"
        }
    },
    "eslintIgnore": [
        "/api",
        "/node_modules",
        "/build",
        "/public/build"
    ],
    "prettier": {
        "printWidth": 120,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all"
    }
}
