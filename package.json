{
    "private": true,
    "name": "seth.bertalotto.net",
    "description": "Website for seth.bertalotto.net",
    "license": "",
    "repository": {
        "type": "git",
        "url": "git@github.com:redonkulus/seth.bertalotto.net.git"
    },
    "scripts": {
        "build": "npm run build:css && npm run build:remix",
        "build:css": "npm run generate:css -- --minify",
        "build:remix": "remix build",
        "dev": "concurrently npm:dev:*",
        "dev:css": "npm run generate:css -- --watch",
        "dev:remix": "remix dev",
        "format": "prettier --write .",
        "generate:css": "npx tailwindcss -i ./app/styles.css -o ./build/tailwind.css",
        "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
        "postinstall": "remix setup node",
        "start": "remix-serve build"
    },
    "dependencies": {
        "@remix-run/react": "^1.1.1",
        "@remix-run/serve": "^1.1.1",
        "@types/marked": "^4.0.1",
        "classnames": "^2.3.1",
        "front-matter": "^4.0.2",
        "marked": "^4.0.10",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "remix": "^1.1.1",
        "tiny-invariant": "^1.2.0"
    },
    "devDependencies": {
        "@remix-run/dev": "^1.1.1",
        "@remix-run/eslint-config": "^1.3.3",
        "@types/react": "^17.0.24",
        "@types/react-dom": "^17.0.9",
        "concurrently": "^7.0.0",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "^2.6.1",
        "tailwindcss": "^3.0.23",
        "typescript": "^4.1.2"
    },
    "engines": {
        "node": ">=16"
    },
    "sideEffects": false,
    "eslintIgnore": [
        "/node_modules",
        "/build",
        "/public/build"
    ],
    "prettier": {
        "printWidth": 120,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all"
    }
}
